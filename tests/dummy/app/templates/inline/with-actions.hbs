<div class="content">
  <p>
    <code>onCancel</code> and <code>onConfirm</code> fire immediately.
    <code>onOpen</code> and <code>onClose</code> fire when the <code>open</code>
    and <code>close</code> animations are complete.
  </p>

  {{ember-remodal
    openButton='Open Modal With Actions'
    confirmButton='OK'
    cancelButton='Cancel'
    onOpen='notifyOpened'
    onConfirm='notifyConfirmed'
    onCancel='notifyCanceled'
    onClose='notifyClosed'
  }}

{{#code-block language='handlebars'}}
  &#123;&#123;ember-remodal
    openButton='Open Modal With Actions'
    confirmButton='OK'
    cancelButton='Cancel'
    onOpen='notifyOpened'
    onConfirm='notifyConfirmed'
    onCancel='notifyCanceled'
    onClose='notifyClose'
  &#125;&#125;
{{/code-block}}

{{#code-block language='javascript'}}
  export default Ember.Whatever.extend({
    notify: Ember.inject.service('notify'),

    actions: {
      notifyOpened() {
        this.get('notify').info('Opened');
      },

      notifyConfirmed() {
        this.get('notify').success('Confirmed');
      },

      notifyCanceled() {
        this.get('notify').error('Canceled');
      },

      notifyClosed() {
        this.get('notify').warning('Closed');
      }
    }
  });
{{/code-block}}
</div>
